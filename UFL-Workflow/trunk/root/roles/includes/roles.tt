[% DEFAULT
   field.label = 'Role'
   field.name  = 'role_id'
-%]
<label>[% field.label | html %]:
  <select name="[% field.name | html %]">
[% WHILE (role = roles.next) %]
    <option value="[% role.id | html %]"[% IF role.id == field.value %] selected="selected"[% END %]>[% role.name | html %]</option>
[% END %]
  </select>
</label>
