[% DEFAULT
   field_label = 'Role'
   field_name  = 'role_id'
-%]
<label>[% field_label | html %]:
  <select name="[% field_name | html %]">
[% WHILE (role = roles.next) %]
    <option value="[% role.id | html %]"[% IF role.id == field_value %] selected="selected"[% END %]>[% role.name | html %]</option>
[% END %]
  </select>
</label>
