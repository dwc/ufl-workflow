[% WHILE field_data %]
[% SET type = field_data.field.type %]
<label [% IF type == 3 %] class="checkbox" [% END %]>[% field_data.field.name | html %] [% IF field_data.field.optional == 0 %]<span class="error">*</span>[% END %] : 
[% IF type == 0 OR type == 1 %]<input type="text" name="[% field_data.field.id %]"maxlength="64" value="[% field_data.value | html%]" />[% END %]
[% IF type == 2 %]<textarea name="[% field_data.field.id %]">[% field_data.value | html  %]</textarea>[% END %]
[% IF type == 3 %]<input type="checkbox" name="[% field_data.field.id %]" value="1" /><br/>[% END %]
</label>
[% field_data = field_data.next_field_data %]
[% END -%]
